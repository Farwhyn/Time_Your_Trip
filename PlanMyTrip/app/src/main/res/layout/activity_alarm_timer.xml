<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alarm_timer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.planmytrip.johan.planmytrip.alarmTimer"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="#edeeef"
    android:layout_margin="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0649B6"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:hint="@string/timer"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/locationTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="@string/you_will_reach_your_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textColor="#FFDA24"
        android:textSize="24sp"
        android:textAlignment="center"
        android:translationY="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/toolbar3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationTextView"
        android:textSize="13sp"
        android:layout_marginTop="140dp"
        android:layout_below="@+id/timer"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/arrive_in"
        android:layout_width="wrap_content"
        android:id="@+id/timer"
        android:layout_marginTop="60dp"
        android:textSize="30sp"
        android:textColor="#0649B6"
        android:layout_below="@+id/toolbar3"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp" />

    <Button
        android:text="@string/stopalarm"
        android:id="@+id/button3"
        android:textColor="#ffffff"
        android:layout_width="100dp"
        android:background="@color/common_signin_btn_default_background"
        android:layout_marginBottom="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/timer"
        android:layout_alignEnd="@+id/timer"
        android:layout_marginTop="0dp"
        android:layout_height="40dp" />

    <Button
        android:text="RESET"
        android:id="@+id/button4"
        android:textColor="#ffffff"
        android:layout_width="100dp"
        android:background="?attr/colorButtonNormal"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/timer"
        android:layout_alignStart="@+id/timer"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="0dp"
        android:onClick="onClick (alarmTimer)"
        android:layout_height="40dp" />


</RelativeLayout>
