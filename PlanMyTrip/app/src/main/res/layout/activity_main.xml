<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.johan.planmytrip.MainActivity"
    android:background="#edeeef">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0649B6"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/busStopNumber"
        android:hint="EnterStartingStop"
        android:layout_width="150dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/done1"
        android:layout_toStartOf="@+id/done1"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:textColorLink="#FFDA24"
        android:backgroundTint="#FFDA24"
        android:textCursorDrawable="@null" />

    <Button
        android:text="NEXT "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/done1"
        android:onClick="busStopNumber"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:layout_alignTop="@+id/busStopNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="PlanMyTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="#FFDA24"
        android:translationY="10dp"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
